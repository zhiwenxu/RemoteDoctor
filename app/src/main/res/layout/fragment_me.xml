<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_gray_bg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="15dp"
        android:background="@color/app_white">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/me_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            app:fadeDuration="1000"
            app:roundAsCircle="true"
            app:placeholderImage="@color/app_common_color_green"
            android:layout_centerVertical="true" />
        <TextView
            android:id="@+id/me_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="刘雯"
            android:textColor="@color/app_black"
            android:layout_alignTop="@id/me_icon"
            android:layout_toRightOf="@id/me_icon"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"/>
        <TextView
            android:id="@+id/me_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="近视一期有待观察患者"
            android:layout_toRightOf="@id/me_icon"
            android:layout_below="@id/me_name"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:textColor="@color/text_color_gray"/>
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_toRightOf="@id/me_name"
            android:layout_alignTop="@id/me_name"
            android:layout_marginLeft="5dp"
            android:background="@drawable/girl_pic"/>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/sick_info_layout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="1px"
        android:background="@drawable/layout_item_bg">
        <ImageView
            android:id="@+id/data"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:background="@drawable/data_pic"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="@string/my_data_str"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/data"
            android:layout_marginLeft="5dp"
            android:textColor="@color/app_black"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/right_arrow"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/sick_record_layout"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/layout_item_bg">
        <ImageView
            android:id="@+id/sick_record_icon"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:background="@drawable/sick_record_icon"/>
        <TextView
            android:id="@+id/sick_record_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="@string/sick_record"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/sick_record_icon"
            android:layout_marginLeft="5dp"
            android:textColor="@color/app_black"/>
        <LinearLayout
            android:id="@+id/sick_record_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:orientation="horizontal"
            android:layout_margin="10dp"
            android:layout_toRightOf="@id/sick_record_tv">
            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="center"
                android:layout_margin="5dp"
                android:background="@drawable/sick_record1"/>
            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:scaleType="center"
                android:background="@drawable/sick_record2"/>
            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:scaleType="center"
                android:background="@drawable/sick_record3"/>
        </LinearLayout>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/order_layout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/layout_item_bg">
        <ImageView
            android:id="@+id/rc"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:background="@drawable/rc_ipic"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="@string/my_rc"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/rc"
            android:layout_marginLeft="5dp"
            android:textColor="@color/app_black"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/right_arrow"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"/>
    </RelativeLayout>




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/layout_item_bg">
        <ImageView
            android:id="@+id/ct"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:background="@drawable/ct_pic"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="@string/my_ct"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/ct"
            android:layout_marginLeft="5dp"
            android:textColor="@color/app_black"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/right_arrow"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"/>
    </RelativeLayout>
</LinearLayout>